<div class="container">
  <div class="row border border-5">
    <div class="col-12 col-sm-12 my-5 text-center">
      <%= image_tag @user.get_profile_image(120, 120)  %>
        <strong><%= @user.name %></strong>&emsp;
        投稿<%= @user.bean_count %>件 &emsp;
        <% if current_user.following?(@user) %>
          <%= link_to "フォロー外す", user_relationships_path(@user.id), method: :delete, class: "btn btn-outline-secondary" %>
        <% else %>
          <%= link_to "フォローする", user_relationships_path(@user.id), method: :post, class: "btn btn-outline-primary" %>
        <% end %>
      </span>
    </div>
      <div class="col-12 text-center">
        <%= link_to "フォロー" + @user.followings.count.to_s, user_followings_path(@user), class: "btn btn-outline-primary mr-3" %>
        <%= link_to "フォロワー" + @user.followers.count.to_s, user_followers_path(@user), class: "btn btn-outline-primary" %>
      </div>
      <p class="col-12 my-5">
        <%= link_to edit_user_path(@user.id), class: "btn btn-outline-secondary btn-block"  do %>
          <i class="fas fa-user-cog"></i>
        <% end %>
      </p>


    <!--下記投稿内容-->
    <div class="container">
      <div class="row">
        <% @user.beans.each do |bean| %>
          <div class="col-12 col-md-4 m-0 my-2">
            <%= link_to bean_path(bean.id) do %>
              <%= image_tag bean.get_bean_image, class: "s-show-img-trimmimg img-fluid" %>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>