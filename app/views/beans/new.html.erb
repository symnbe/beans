<div class="container">
  <h2 class="mx-auto d-flex justify-content-center my-5">新規投稿</h2>
  <div class="row">
    <div class="mx-auto d-flex justify-content-center">
      <%= form_with model:@bean, local:true do |f| %>
      <div class="form-group">
        <%= f.label:store_name, class:"autoforcus" %>
        <%= f.text_field:store_name, class:"form-control" %>
      </div>
      <div class="form-group">
        <%= f.label:image %>
        <%= f.file_field:bean_image, class:"form-control-file" %>
      </div>
      <div class="form-group">
        <%= f.label:opinion %>
        <%= f.text_area:opinion, class:"autoforcus form-control" %>
      </div>
      <div class="form-group">
        <%= f.submit "シェア", class:"btn btn-outline-secondary" %>
      </div>
      <% end %>
    </div>
  </div>
</div>