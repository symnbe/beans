<div class="container">
  <div class="row">
    <div class="col-12 my-5">
      <p class="col-6 mr-auto user-show-page"><%= image_tag @user.get_profile_image(60, 60) %>
        <strong><%= @user.name %></strong>&emsp;
        投稿<%= @user.bean_count %>件 &emsp;
      </p>
      <p class="col-6 ml-auto user-show-page">
        
      </p>
      <span>
        <%= link_to edit_user_path(@user.id), class: "btn btn-outline-secondary btn-block"  do %>
          <i class="fas fa-user-cog"></i>
        <% end %>
      </span>
    </div>

    <!--下記投稿内容-->
    <div class="container">
      <div class="row">
        <% @user.beans.each do |bean| %>
          <div class="col-12 col-md-4 m-0 my-2">
            <%= link_to bean_path(bean.id) do %>
              <%= image_tag bean.get_bean_image, class: "s-show-img-trimmimg img-fluid" %>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>